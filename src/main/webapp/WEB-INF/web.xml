	<!--Start of JSP mapping-->

	<servlet>
		<servlet-name>Home</servlet-name>
		<jsp-file>/presentation/views/index-5.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>About</servlet-name>
